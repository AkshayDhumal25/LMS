@model LMS.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit Profile";
}

<h2>Edit Profile</h2>

<form asp-action="EditProfile" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label>Contact Number</label>
        <input asp-for="ContactNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-success mt-2">Save Changes</button>
    <a asp-action="Profile" class="btn btn-secondary mt-2">Cancel</a>
</form>
