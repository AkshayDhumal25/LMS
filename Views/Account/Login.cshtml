@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Username</label>
        <input name="username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Login</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
}

<p class="mt-2">Don't have an account? <a asp-action="Register">Register here</a>.</p>

<p class="mt-3"><strong>Admin?</strong> <a asp-action="Login" asp-controller="Admin">Login here</a>.</p>
