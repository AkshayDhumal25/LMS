@model LMS.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Username</label>
        <input asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Contact Number</label>
        <input asp-for="ContactNumber" class="form-control" required />
    </div>
    <div class="form-group form-check">
        <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Is Admin</label>
    </div>

    <button type="submit" class="btn btn-success mt-2">Save Changes</button>
    <a asp-action="UserList" class="btn btn-secondary mt-2">Cancel</a>
</form>
